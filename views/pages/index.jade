extend ../layout
block content
  .container
    .row
      each item in movies
        .col-md-2
          .thumbnail
            a(href="/movie/#{item._id}")
              img(src="#{item.poster}", alt="#{item.title}")
            .caption
              h3 #{item.title}
              p: a.btn.btn-primary(href="/movie/#{item._id}" role="button") 观看预告片
  a(href="/movie/:1")  /movie/1
  br
  a(href="/admin/movie") /admin/movie
  br
  a(href="/admin/list") /admin/list